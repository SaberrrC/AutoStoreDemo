<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@drawable/dialog_bg"
              android:layout_width="280dp"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_close_dialog"
        android:clickable="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@mipmap/close"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_dialog_title"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="17dp"
        android:layout_width="127dp"
        android:layout_height="25dp"
        android:text="请输入支付密码"
        android:textColor="#FF000000"
        android:textSize="18sp"
        />

    <View
        android:id="@+id/dialog_hl"
        android:background="#F5F5F5"
        android:layout_marginTop="13dp"
        android:layout_below="@id/tv_dialog_title"
        android:layout_width="280dp"
        android:layout_height="3px"
        />

    <TextView
        android:id="@+id/money_need_to_pay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:layout_below="@id/dialog_hl"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="¥100.00"
        android:textColor="#FFED4848"
        android:textSize="28sp"
        />

    <com.jungly.gridpasswordview.GridPasswordView
        android:id="@+id/pswView"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/money_need_to_pay"
        android:layout_marginTop="20.7dp"
        android:layout_marginBottom="30dp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        app:gpvTextColor="#000"
        app:gpvTextSize="25sp"
        app:gpvLineColor="#9B9B9B"
        app:gpvLineWidth="1dp"
        app:gpvGridColor="#ffffff"
        app:gpvPasswordLength="6"
        app:gpvPasswordType="numberPassword"/>
</RelativeLayout>