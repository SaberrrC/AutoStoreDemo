<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/identify_tip"
        android:layout_width="152px"
        android:layout_height="30px"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginTop="77px"
        android:layout_marginLeft="249px"
        android:background="@mipmap/face_cetify_bg"
        android:text="完善身份，智能购物"
        android:textColor="#FF999999"
        android:textSize="12px"
        />

    <TextView
        android:id="@+id/tv_today_user_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147px"
        android:layout_width="111px"
        android:layout_height="18px"
        android:text="今日到店用户"
        android:textColor="#FFB9B9B9"
        android:textSize="18px"
        />

    <TextView
        android:id="@+id/user_num"
        android:layout_marginTop="10px"
        android:layout_below="@id/tv_today_user_num"
        android:layout_centerHorizontal="true"
        android:layout_width="187px"
        android:layout_height="32px"
        android:text="100,000,000"
        android:textColor="#FFFCC71F"
        android:textSize="32px"
        />

    <Button
        android:background="@mipmap/scan_bg"
        android:layout_width="140px"
        android:layout_height="140px"
        android:text="扫一扫"
        android:layout_marginTop="248px"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFFFF"
        android:textSize="26px"
        android:id="@+id/btn_scan_bg"/>

    <RelativeLayout
        android:layout_below="@id/btn_scan_bg"
        android:layout_width="186.5px"
        android:layout_marginTop="78px"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_lemaibao"
            android:layout_width="wrap_content"
            android:layout_height="19px"
            android:text="乐买宝"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:textColor="#FF333333"
            android:textSize="16px"
            />
        <Button
            android:id="@+id/btn_open_le_mai_bao"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_lemaibao"
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:text="开通乐买宝"
            android:background="@null"
            android:layout_marginTop="7px"
            android:textColor="#FFB9B9B9"
            android:textSize="14px"
            />
    </RelativeLayout>

        <View
            android:id="@+id/cvl"
            android:layout_below="@id/btn_scan_bg"
            android:background="#E5E5E5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78px"
            android:layout_width="2px"
            android:layout_height="53.2px"
            />
        <RelativeLayout
            android:layout_below="@id/btn_scan_bg"
            android:layout_width="186.5px"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cvl"
            android:layout_marginTop="70px"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/btn_yu_e"
                android:layout_width="66px"
                android:layout_height="19px"
                android:text="账户余额"
                android:background="@null"
                android:textColor="#FF333333"
                android:textSize="16px"
                />
            <TextView
                android:layout_below="@id/btn_yu_e"
                android:layout_width="70px"
                android:layout_height="20px"
                android:text="0"
                android:gravity="center"
                android:layout_marginTop="7px"
                android:textColor="#FFB9B9B9"
                android:textSize="14px"
                />

        </RelativeLayout>

</RelativeLayout>