<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="20dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#F5F5F5"/>

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxEms="14"
        android:text="邻家无人值守便利店"
        android:textColor="#FF333333"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="2017-05-08   09:00:12"
        android:textColor="#FF999999"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_item_cons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_date"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="消费金额："
        android:textColor="#FF999999"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_item_cons"
        android:layout_toRightOf="@id/tv_item_cons"
        android:text="¥500.00"
        android:textColor="#ED4848"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_item_pay_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_item_money"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="微信支付"
        android:textColor="#FF999999"
        android:textSize="14sp"/>

</RelativeLayout>