<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#F5F5F5"
              android:layout_height="match_parent">
    <include layout="@layout/toolbar_layout"></include>
    
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="189.2px">

        <TextView
            android:id="@+id/tv_ke_yong_e_du"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18px"
            android:layout_width="84px"
            android:layout_height="20px"
            android:text="当前可用额度"
            android:textColor="#FF999999"
            android:textSize="14px"
            />
        <TextView
            android:id="@+id/tv_money"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_ke_yong_e_du"
            android:layout_width="132px"
            android:layout_height="48px"
            android:text="¥200.00"
            android:textColor="#FFED4848"
            android:textSize="34px"
            />
        <LinearLayout
            android:layout_below="@id/tv_money"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_below="@id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="17px"
            android:text="已使用："
            android:textColor="#FF999999"
            android:textSize="12px"
            />
        <TextView
            android:layout_marginLeft="5px"
            android:layout_width="66px"
            android:layout_height="25px"
            android:text="¥100.00"
            android:textColor="#FF333333"
            android:textSize="18px"
            />
        </LinearLayout>
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10px"/>

    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50px">

        <TextView
            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="待还账单"
            android:textColor="#FF999999"
            android:textSize="16px"
            />
        
        <View
            android:layout_gravity="center"
            android:background="#f5f5f5"
            android:layout_width="3px"
            android:layout_height="33px"></View>

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:text="已还款账单"
            android:textColor="#FFFCBF0D"
            android:textSize="16px"
            />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>