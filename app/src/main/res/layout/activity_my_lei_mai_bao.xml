<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="189.2px"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_available_amount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18px"
            android:layout_width="wrap_content"
            android:layout_height="20px"
            android:text="当前可用额度"
            android:textColor="#FF999999"
            android:textSize="14px"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_available_amount"
            android:layout_centerHorizontal="true"
            android:text="¥200.00"
            android:textColor="#FFED4848"
            android:textSize="34px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_money"
                android:text="已使用："
                android:textColor="#FF999999"
                android:textSize="12px"/>

            <TextView
                android:id="@+id/tv_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:text="¥100.00"
                android:textColor="#FF333333"
                android:textSize="18px"/>
        </LinearLayout>
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_behalf_repayment"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待还账单"
            android:textColor="#FF999999"
            android:textSize="16px"/>

        <View
            android:layout_width="3px"
            android:layout_height="33px"
            android:layout_gravity="center"
            android:background="#f5f5f5"></View>

        <TextView
            android:id="@+id/tv_repaid"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已还款账单"
            android:textColor="#FFFCBF0D"
            android:textSize="16px"/>
    </LinearLayout>

    <com.shanlin.autostore.view.PulltoRefreshRecyclerView
        android:id="@+id/pr_lists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>