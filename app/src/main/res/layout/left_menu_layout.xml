<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="255dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="#4A4A4A">

    <LinearLayout
        android:id="@+id/location_1"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="48dp"
            android:padding="1dp"
            android:background="@mipmap/default_head"
            android:clickable="true"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="7px"
            android:text="183＊＊＊＊1234"
            android:textColor="#fff"
            android:textSize="16sp"/>
    </LinearLayout>

    <View
        android:id="@+id/hl1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/location_1"
        android:background="@color/gray_747474"></View>

    <!--购物记录-->
    <LinearLayout
        android:id="@+id/location_2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/hl1"
        android:background="@color/gray_595959"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20.9dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/buy_record_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20.9dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:text="购买记录"
            android:textColor="@color/white_fff"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="9dp"
            android:layout_height="15.9dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="117dp"
            android:gravity="right"
            android:src="@mipmap/nav_enter"/>
    </LinearLayout>

    <View
        android:id="@+id/hl2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/location_2"
        android:background="@color/gray_747474"></View>

    <!--version_info-->
    <LinearLayout
        android:id="@+id/location_3"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/hl2"
        android:background="@color/gray_595959"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20.9dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/version_info_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20.9dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:text="版本信息"
            android:textColor="@color/white_fff"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="9dp"
            android:layout_height="15.9dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="117dp"
            android:gravity="right"
            android:src="@mipmap/nav_enter"/>

    </LinearLayout>

    <View
        android:id="@+id/hl3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/location_3"
        android:background="@color/gray_747474"></View>

    <View
        android:id="@+id/hl4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/hl3"
        android:layout_marginTop="70dp"
        android:background="@color/gray_747474"></View>

    <!--退出-->
    <LinearLayout
        android:id="@+id/location_4"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/hl4"
        android:background="@color/gray_595959"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20.9dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/exit_icon"/>

        <TextView
            android:layout_width="64dp"
            android:layout_height="20.9dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:text="退出"
            android:textColor="@color/white_fff"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="9dp"
            android:layout_height="15.9dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="117dp"
            android:gravity="right"
            android:src="@mipmap/nav_enter"/>

    </LinearLayout>

    <View
        android:id="@+id/hl5"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/location_4"
        android:background="@color/gray_747474"></View>


</RelativeLayout>